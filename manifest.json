{
	"manifest_version": 2,
	"name": "Mocking Spongebob Selection Shortcut",
	"version": "1.1",
	"description": "Generate Mocking Spongebob memes faster with a context menu shortcut!",
	"permissions": [
		"contextMenus",
		"tabs",
		"activeTab",
		"https://denk0403.github.io/Mocking-Spongebob/*"
	],
	"background": {
		"scripts": ["./src/background.js"],
		"persistent": false
	},
	"options_ui": {
		"page": "./src/options.html",
		"open_in_tab": false
	},
	"browser_action": {
		"default_icon": "img/icon-144.png",
		"default_popup": "./src/options.html",
		"default_title": "Mocking SpongeBob Selection Shortcut"
	},
	"icons": {
		"144": "img/icon-144.png"
	}
}
